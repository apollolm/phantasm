doctype 5
html
	head
		title #{title}
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		header
			h1 Phantasm printing API
		div.breadcrumbs
			-if(breadcrumbs){
				each crumb in breadcrumbs
					-if(crumb.link == ""){
						|#{crumb.name}
					-}else{
						a(href=crumb.link) #{crumb.name}
						-if(breadcrumbs.length > 1){
							&nbsp;
							>
							&nbsp;
						-}
					-}
			-}
		.container
			.main-content
				block content
		.sidebar
				block sidebar
	footer
		p 
			|Built with love by 
			a(href='http://www.spatialdev.com')(target='_blank')
				|SpatialDev
			|, running on node with Express, Jade and Less